{
	"name": "Cloud Native Development",
	"image": "ghcr.io/wagov-dtt/devcontainer-base:latest",
	"privileged": true,
	"mounts": ["source=dind-var-lib-docker,target=/var/lib/docker,type=volume"],
	"remoteUser": "vscode",
	"customizations": {
		"codespaces": {
			"repositories": {
				"wagov-dtt/devcontainer-base": {
					"permissions": {
						"contents": "write",
						"packages": "write",
						"attestations": "write",
						"id-token": "write"
					}
				}
			}
		}
	}
}
